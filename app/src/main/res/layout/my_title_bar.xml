<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:text="@string/app_name"
            android:textSize="@dimen/title_text"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_heigh"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"/>
        <ImageButton
            android:id="@+id/setting_imb_title"
            app:srcCompat="@drawable/icon_setting"
            android:scaleType="centerInside"
            android:background="@color/touming"
            android:layout_width="@dimen/title_heigh"
            android:layout_height="@dimen/title_heigh"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"
            android:contentDescription="TODO" />
        <ImageButton
            android:id="@+id/search_imb_title"
            app:srcCompat="@drawable/icon_search"
            android:scaleType="centerInside"
            android:background="@color/touming"
            android:layout_width="@dimen/title_heigh"
            android:layout_height="@dimen/title_heigh"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/setting_imb_title"/>
    </RelativeLayout>

</FrameLayout>


