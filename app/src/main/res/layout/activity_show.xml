<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".ui.check.ShowActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/messageLayout">
        <TextView
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_show_message"
            android:textSize="35sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="serif"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:gravity="center"/>
        <Button
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnInter"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_pc"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardViewSory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
<TextView
    android:layout_margin="5dp"
    android:id="@+id/txt_wrong_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="45sp"
    android:textColor="@color/red"
    android:fontFamily="serif"
    android:text="wrong message"
    android:textStyle="bold"
    android:gravity="center"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>