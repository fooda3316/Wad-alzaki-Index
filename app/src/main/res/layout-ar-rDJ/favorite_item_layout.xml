<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "@dimen/title_heigh_2"
    style="@style/CallLogCardStyle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh_2"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="@dimen/title_heigh_2"
            android:layout_height="@dimen/title_heigh_2"
            android:layout_gravity="start">

            <ImageView
                android:id="@+id/favorite_item_iv"
                android:layout_width="@dimen/title_heigh_2"
                android:layout_height="@dimen/title_heigh_2"
                android:src="@drawable/ic_person1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/title_heigh_2"
                android:layout_height="@dimen/title_heigh_2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_heigh_2"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                    android:text="name"
                    android:id="@+id/favorite_name_tv"
                    android:textSize="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                    android:layout_weight="1"/>
            <TextView
                    android:text="222"
                    android:id="@+id/favorite_number_tv"
                    android:textSize="@dimen/call_log_name"
                android:paddingStart="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"

                android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:src="@drawable/icon_zuijin"
                        android:id="@+id/favorite_type_iv"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/activity_horizontal_margin"
                        android:layout_height="@dimen/activity_horizontal_margin" />
                    <TextView
                        android:text="33333"
                        android:id="@+id/favorite_log_tv"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:paddingStart="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

